    function ValidateEmail(email) {
        // Validate email format
        var expr = /^([\w-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([\w-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/;
        return expr.test(email);
    };


    $("#submit_contact").click(function () {
        var name = $('#name').val();
        var email = $('#email').val();
        var phone = $('#phone').val();
        var subject = $('#subject').val();
        var message = $('#message').val();

        if (email != "") {
            if (!ValidateEmail($("#email").val())) {
                alert("Invalid Email Address!");
                return false;

            }
        }


        $.ajax({
            url: '{{ url("contactsave") }}',
            type: 'POST',
            dataType: "json",
            data: {
                "_token": "{{ csrf_token() }}",
                "name": $('#name').val(),
                "email": $('#email').val(),
                "phone": $('#phone').val(),
                "subject": $('#subject').val(),
                "message": $('#message').val()

            },
            success: function (request) {


                if (request.contents == 'success') {
                    $("#submit_contact").hide();

                    $("#require_msg").hide();
                    $("#success_msg").show();
                    $('#success_msg').html(request.msg);

                    $('html,body').animate({
                            scrollTop: $("#contact").offset().top
                        },
                        'slow');
                    window.setTimeout(function () {
                        location.reload()
                    }, 3000);

                } else if (request.contents == 'fail') {
                    $("#success_msg").hide();
                    $("#require_msg").show();

                    $('#require_msg').html(request.msg);


                    $('html,body').animate({
                            scrollTop: $("#contact").offset().top
                        },
                        'slow');
                }

            }

        });

    });

</script>
