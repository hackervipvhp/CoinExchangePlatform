<% content_for :frame do %>
  <div class="container history-pages">
    <%= render 'tabs', active: :account %>

    <div class="card card-default" id="transactions">
      <div class="card-body">
        <div class="col-24 table-responsive">
          <table class="table table-condensed table-striped">
            <thead>
              <tr>
                <th><%= t('.type') %></th>
                <th><%= t('.timestamp') %></th>
                <th><%= t('.currency') %></th>
                <th><%= t('.amount') %></th>
                <th><%= t('.fee') %></th>
                <th><%= t('.state') %></th>
                <th><%= t('.txid') %></th>
              </tr>
            </thead>
            <tbody class="list">
              <%= render partial: 'transaction', collection: @transactions %>
            </tbody>
          </table>
          <div class="float-right">
            <%= paginate @transactions %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% content_for :header do %>
  <div class="fixed-menu">
    <div class="inner-header">
      <%= render 'shared/funds_menu' %>
    </div>
  </div>

<% end %>
